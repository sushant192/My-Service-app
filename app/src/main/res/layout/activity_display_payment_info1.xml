<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayPaymentInfo1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#000"
        android:padding="15dp"
        android:background="#8998EC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:id="@+id/layout1"
        android:background="@drawable/log"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/avatar"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ownername2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sushant Bangera"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14/02/2021"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wankhede stadium , mumbai 410201"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Withdraw Request"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000"
        android:background="#ED9E9E"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/log"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/travelfair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Receiver"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/totalprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/paycash1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="#2186D6"/>


</LinearLayout>